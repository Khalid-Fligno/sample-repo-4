{
    "globals": {
        "fetch": false
      },
    "env": {
        "node": true,
        "es6": true,
        "jest": true,
        "react-native/react-native": true
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "no-use-before-define": [2, { "variables": false }],
        "react/prop-types": [2, { "ignore": ["navigation"] }],
        "react/jsx-filename-extension": 0,
        "global-require": 0,
        "import/no-unresolved": [2, { "ignore": ["local_settings"] }],
        "import/extensions": [2, { "ignore": ["local_settings"] }],
        "import/prefer-default-export": 0,
        "max-len": [1, { "code": 150 }],
        "arrow-body-style": 0,
        "arrow-parens": [2, "always"],
        "no-return-assign": 0,
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2,
        "react-native/no-color-literals": 2,
        "react-native/no-raw-text": 2
    },
    "ecmaFeatures": {
        "jsx": true
    }
}
